<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6">

    <LinearLayout style="@style/wrap_layout"
        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">

            <TextView style="@style/usertext" android:text="我发布的" />

            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线 -->

        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="我卖出的" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="我买到的" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="我收藏的" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp">

        <LinearLayout style="@style/single_layout">
            <TextView style="@style/usertext" android:text="设置" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

      </LinearLayout>
<LinearLayout
    android:id="@+id/me_click"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="130dp">
    <ImageView
        android:id="@+id/head"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/head2" />
    <TextView
        android:id="@+id/me_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="点击登陆"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
</LinearLayout>
</RelativeLayout>
